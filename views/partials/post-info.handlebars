<article class="post">
  <div class="title">
    Title: {{title}}
  
  </div>
  <div class="meta">
    <p>{{post.body.body}}</p>
    {{content}} by {{user.username}} on {{format_date created_at}}
    |
   <a href="/post/{{id}}">{{comments.length}}
      {{format_plural "comment" comments.length}}</a>
  </div>
</article>